   "source": [
    "def sep(p1, p2):\n",
    "    return p2 - p1\n",
    "\n",
    "def pbc_sep(p1, p2):\n",
    "    arrow = sep(p1, p2)\n",
    "    rem = np.mod(arrow, 18)\n",
    "    mic_separation_vector = np.mod(rem+18/2, 18)-18/2\n",
    "\n",
    "    return np.array(mic_separation_vector)\n"
   ]
  }
